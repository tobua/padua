{
  "name": "padua",
  "description": "Tool to configure, setup, build, test and publish npm plugins.",
  "version": "0.3.9",
  "repository": "github:tobua/padua",
  "license": "MIT",
  "author": "Matthias Giger",
  "scripts": {
    "postinstall": "node ./installation.js",
    "release": "standard-version",
    "test": "jest"
  },
  "dependencies": {
    "@babel/eslint-parser": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@types/jest": "^27.0.1",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "babel-jest": "^27.0.6",
    "chokidar": "^3.5.2",
    "current-git-branch": "^1.1.0",
    "deep-for-each": "^3.0.0",
    "deepmerge": "^4.2.2",
    "esbuild": "^0.12.20",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-cypress": "^2.11.3",
    "eslint-plugin-import": "^2.24.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "fast-glob": "^3.2.7",
    "filesize": "^7.0.0",
    "gzip-size": "^6.0.0",
    "is-ci": "^3.0.0",
    "jest": "^27.0.6",
    "lodash.get": "^4.4.2",
    "lodash.set": "^4.3.2",
    "lodash.unset": "^4.5.2",
    "logua": "^2.1.4",
    "npm-check-updates": "^11.8.3",
    "pacote": "^11.3.5",
    "pakag": "^2.5.0",
    "parse-gitignore": "^1.0.1",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "skip-local-postinstall": "^2.0.2",
    "standard-version": "^9.3.1",
    "stylelint": "^13.13.1",
    "stylelint-config-recommended": "^5.0.0",
    "ts-jest": "^27.0.4",
    "typescript": "^4.3.5"
  },
  "type": "module",
  "main": "index.js",
  "bin": "cli.js",
  "source": "index.js",
  "devDependencies": {
    "jest-fixture": "^2.0.0"
  },
  "files": [
    "configuration",
    "script",
    "utility",
    "*.d.ts",
    "*.js"
  ],
  "prettier": {
    "singleQuote": true,
    "semi": false
  },
  "eslintConfig": {
    "extends": "./configuration/eslint.cjs",
    "rules": {
      "import/extensions": [
        2,
        "always"
      ]
    }
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/template/",
      "/script/"
    ],
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "/template/",
      "/test/fixture/"
    ],
    "transform": {
      "^.+\\.jsx?$": [
        "babel-jest",
        {
          "configFile": "./configuration/.babelrc"
        }
      ]
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!jest-fixture|logua|pakag).*/"
    ]
  },
  "engines": {
    "node": ">= 14"
  }
}
