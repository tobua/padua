{
  "name": "padua",
  "description": "Tool to configure, setup, build, test and publish npm plugins.",
  "version": "0.1.1",
  "repository": "github:tobua/padua",
  "license": "MIT",
  "author": "Matthias Giger",
  "scripts": {
    "postinstall": "node ./installation.js",
    "release": "standard-version",
    "test": "jest"
  },
  "dependencies": {
    "@babel/preset-env": "^7.11.5",
    "@types/jest": "^26.0.14",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.5.2",
    "chokidar": "^3.4.2",
    "current-git-branch": "^1.1.0",
    "deep-for-each": "^3.0.0",
    "esbuild": "^0.7.14",
    "eslint": "^7.11.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-airbnb-typescript": "^11.0.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.21.4",
    "eslint-plugin-react-hooks": "^4.1.2",
    "fast-glob": "^3.2.4",
    "jest": "^26.5.2",
    "logua": "^2.1.1",
    "npm-check-updates": "^9.0.4",
    "object-assign-deep": "^0.4.0",
    "pakag": "^2.1.0",
    "parse-gitignore": "^1.0.1",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "skip-local-postinstall": "^1.0.2",
    "standard-version": "^9.0.0",
    "ts-jest": "^26.4.1",
    "typescript": "^4.0.3"
  },
  "type": "module",
  "main": "index.js",
  "bin": "cli/index.js",
  "source": "index.js",
  "files": [
    "configuration",
    "script",
    "utility",
    "cli",
    "*.d.ts",
    "*.js"
  ],
  "prettier": {
    "singleQuote": true,
    "semi": false
  },
  "eslintConfig": {
    "extends": "./configuration/eslint.cjs",
    "rules": {
      "import/extensions": [
        2,
        "always"
      ]
    }
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/template/",
      "/script/"
    ],
    "transform": {
      "^.+\\.jsx?$": [
        "babel-jest",
        {
          "configFile": "./configuration/.babelrc"
        }
      ]
    },
    "transformIgnorePatterns": [
      "node_modules/cint"
    ]
  },
  "engines": {
    "node": ">= 13.2.0"
  }
}
