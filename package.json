{
  "name": "padua",
  "description": "Tool to configure, setup, build, test and publish npm plugins.",
  "version": "0.3.4",
  "repository": "github:tobua/padua",
  "license": "MIT",
  "author": "Matthias Giger",
  "scripts": {
    "postinstall": "node ./installation.js",
    "release": "standard-version",
    "test": "jest"
  },
  "dependencies": {
    "@babel/preset-env": "^7.13.10",
    "@types/jest": "^26.0.21",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "chokidar": "^3.5.1",
    "current-git-branch": "^1.1.0",
    "deep-for-each": "^3.0.0",
    "deepmerge": "^4.2.2",
    "esbuild": "^0.9.3",
    "eslint": "^7.22.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "fast-glob": "^3.2.5",
    "filesize": "^6.1.0",
    "gzip-size": "^6.0.0",
    "is-ci": "^3.0.0",
    "jest": "^26.6.3",
    "lodash.get": "^4.4.2",
    "lodash.set": "^4.3.2",
    "lodash.unset": "^4.5.2",
    "logua": "^2.1.4",
    "npm-check-updates": "^11.3.0",
    "pacote": "^11.3.0",
    "pakag": "^2.4.0",
    "parse-gitignore": "^1.0.1",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "skip-local-postinstall": "^2.0.1",
    "standard-version": "^9.1.1",
    "ts-jest": "^26.5.4",
    "typescript": "^4.2.3"
  },
  "type": "module",
  "main": "index.js",
  "bin": "cli.js",
  "source": "index.js",
  "devDependencies": {
    "jest-fixture": "^1.0.1"
  },
  "files": [
    "configuration",
    "script",
    "utility",
    "*.d.ts",
    "*.js"
  ],
  "prettier": {
    "singleQuote": true,
    "semi": false
  },
  "eslintConfig": {
    "extends": "./configuration/eslint.cjs",
    "rules": {
      "import/extensions": [
        2,
        "always"
      ]
    }
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/template/",
      "/script/"
    ],
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "/template/",
      "/test/fixture/"
    ],
    "transform": {
      "^.+\\.jsx?$": [
        "babel-jest",
        {
          "configFile": "./configuration/.babelrc"
        }
      ]
    },
    "transformIgnorePatterns": [
      "node_modules/cint"
    ]
  },
  "engines": {
    "node": ">= 14"
  }
}
