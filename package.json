{
  "name": "padua",
  "description": "Setup, configure, build and publish npm plugins.",
  "version": "0.3.14",
  "repository": "github:tobua/padua",
  "license": "MIT",
  "author": "Matthias Giger",
  "scripts": {
    "postinstall": "node ./installation.js",
    "test": "jest"
  },
  "dependencies": {
    "@babel/eslint-parser": "^7.21.8",
    "@babel/preset-env": "^7.21.5",
    "@npmcli/map-workspaces": "^3.0.4",
    "@types/jest": "^29.5.1",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "babel-jest": "^29.5.0",
    "current-git-branch": "^1.1.0",
    "deep-for-each": "^3.0.0",
    "deepmerge": "^4.3.1",
    "esbuild": "^0.17.19",
    "eslint": "^8.41.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-cypress": "^2.13.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "fast-glob": "^3.2.12",
    "filesize": "^10.0.7",
    "gzip-size": "^7.0.0",
    "is-ci": "^3.0.1",
    "jest": "^29.5.0",
    "lodash.get": "^4.4.2",
    "lodash.set": "^4.3.2",
    "lodash.unset": "^4.5.2",
    "logua": "^2.2.0",
    "npm-check-updates": "^16.10.12",
    "pacote": "^15.2.0",
    "pakag": "^2.8.0",
    "parse-gitignore": "^2.0.0",
    "prettier": "^2.8.8",
    "skip-local-postinstall": "^2.0.4",
    "standard-version": "^9.5.0",
    "strip-ansi": "^7.0.1",
    "stylelint": "^15.6.2",
    "stylelint-config-recommended": "^12.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  },
  "type": "module",
  "main": "index.js",
  "bin": "cli.js",
  "source": "index.js",
  "devDependencies": {
    "jest-fixture": "^4.0.2"
  },
  "files": [
    "configuration",
    "script",
    "utility",
    "*.d.ts",
    "*.js"
  ],
  "keywords": [
    "build",
    "plugin"
  ],
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "printWidth": 100
  },
  "eslintConfig": {
    "extends": "./configuration/eslint.cjs",
    "rules": {
      "import/extensions": [
        2,
        "always"
      ]
    }
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/template/",
      "/script/"
    ],
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "/template/",
      "/test/fixture/"
    ],
    "transform": {
      "^.+\\.jsx?$": [
        "babel-jest",
        {
          "configFile": "./configuration/.babelrc"
        }
      ]
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!jest-fixture|logua|pakag|gzip-size|strip-ansi|ansi-regex|sort-package-json|detect-indent|detect-newline|is-plain-obj|sort-object-keys).*/"
    ]
  },
  "engines": {
    "node": ">= 16"
  }
}
