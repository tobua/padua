{
  "name": "padua",
  "description": "Tool to configure, setup, build, test and publish npm plugins.",
  "version": "0.1.5",
  "repository": "github:tobua/padua",
  "license": "MIT",
  "author": "Matthias Giger",
  "scripts": {
    "postinstall": "node ./installation.js",
    "release": "standard-version",
    "test": "jest"
  },
  "dependencies": {
    "@babel/preset-env": "^7.12.11",
    "@types/jest": "^26.0.19",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "chokidar": "^3.4.3",
    "current-git-branch": "^1.1.0",
    "deep-for-each": "^3.0.0",
    "esbuild": "^0.8.23",
    "eslint": "^7.15.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "fast-glob": "^3.2.4",
    "filesize": "^6.1.0",
    "gzip-size": "^6.0.0",
    "jest": "^26.6.3",
    "logua": "^2.1.2",
    "npm-check-updates": "^10.2.5",
    "object-assign-deep": "^0.4.0",
    "pacote": "^11.1.13",
    "pakag": "^2.2.0",
    "parse-gitignore": "^1.0.1",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "skip-local-postinstall": "^1.0.5",
    "standard-version": "^9.0.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "type": "module",
  "main": "index.js",
  "bin": "cli/index.js",
  "source": "index.js",
  "files": [
    "configuration",
    "script",
    "utility",
    "cli",
    "*.d.ts",
    "*.js"
  ],
  "prettier": {
    "singleQuote": true,
    "semi": false
  },
  "eslintConfig": {
    "extends": "./configuration/eslint.cjs",
    "rules": {
      "import/extensions": [
        2,
        "always"
      ]
    }
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/template/",
      "/script/"
    ],
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "/template/",
      "/test/fixture/"
    ],
    "transform": {
      "^.+\\.jsx?$": [
        "babel-jest",
        {
          "configFile": "./configuration/.babelrc"
        }
      ]
    },
    "transformIgnorePatterns": [
      "node_modules/cint"
    ]
  },
  "engines": {
    "node": ">= 13.2.0"
  }
}
